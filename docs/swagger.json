{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/auth/login": {
            "post": {
                "description": "Allows a user to log in by providing their email and password",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Login a user",
                "parameters": [
                    {
                        "description": "Login request payload",
                        "name": "loginRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/auth.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/auth.LoginResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "description": "Allows a user to register with their name, email, password, and optional profile picture",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a new user",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Name of the user",
                        "name": "name",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Email of the user",
                        "name": "email",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Password for the account",
                        "name": "password",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "file",
                        "description": "Optional profile picture file",
                        "name": "profile_pic",
                        "in": "formData"
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/auth.RegisterResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/predictions": {
            "post": {
                "description": "Predicts a list of recommended courses based on the user's skillsets",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Prediction"
                ],
                "summary": "Predict courses",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "User ID from JWT token",
                        "name": "userID",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "Prediction request payload",
                        "name": "predictRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/prediction.PredictRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of recommended courses",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/prediction.PredictResponse"
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/ratings": {
            "post": {
                "description": "Allows a user to add a rating for a specific course",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Ratings"
                ],
                "summary": "Add a new rating",
                "parameters": [
                    {
                        "type": "integer",
                        "description": "User ID from JWT token",
                        "name": "userID",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "Rating request payload",
                        "name": "ratingRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/rating.CreateRatingRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Rating added successfully"
                    },
                    "400": {
                        "description": "Invalid input"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "definitions": {
        "auth.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "auth.LoginResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer"
                },
                "name": {
                    "type": "string"
                },
                "token": {
                    "type": "string"
                }
            }
        },
        "auth.RegisterResponse": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "profile_pic": {
                    "type": "string"
                }
            }
        },
        "prediction.PredictRequest": {
            "type": "object",
            "properties": {
                "skillsets": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "prediction.PredictResponse": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "provider": {
                    "type": "string"
                },
                "provider_url": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "rating.CreateRatingRequest": {
            "type": "object",
            "required": [
                "course_id",
                "rating"
            ],
            "properties": {
                "course_id": {
                    "type": "integer"
                },
                "rating": {
                    "type": "integer"
                }
            }
        }
    }
}